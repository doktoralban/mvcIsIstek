@model IEnumerable<mvcIsIstek.App_Data.tbMakinalar>

@{
	ViewBag.Title = "MakinalarSorguEkrani";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="jumbotron">
		<h4>Makinaları Filtrele</h4>
		<form>
			<div class="form-group">
				<label for="Tipi">Tipi:</label> 
				<select class="form-control" id="Tipi" name="Tipi">
					<option></option>
					<option>Makina</option>
					<option>Ekipman</option>
 				</select>

			</div>
			<div class="form-group">
				<label for="Kodu">Kodu:</label>
				<input type="text" class="form-control" id="Kodu" name="Kodu" >
			</div>
			 
			<button type="submit" class="btn btn-default">Sorgula</button>
		</form>
	</div>
</div>

	<table class="table">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.MakinaID)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Kodu)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Tanımı)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Grubu)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Tipi)
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.MakinaID
							 )
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Kodu)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Tanımı)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Grubu)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Tipi)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.MakinaID }) |
					@Html.ActionLink("Details", "Details", new { id = item.MakinaID }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.MakinaID })
				</td>
			</tr>
		}

	</table>
